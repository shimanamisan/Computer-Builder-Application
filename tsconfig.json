{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    // ソースマップを有効化
    "sourceMap": true,
    "target": "ES2017",
    "module": "ES2022",
    "strict": true,
    "paths": {
      "*": ["./src/@types/*"]
    },
    "moduleResolution": "node",
    // 暗黙的にanyになる値をエラーにする
    "noImplicitAny": true
  },
  "exclude": ["node_modules"],
  "includes": ["src/**/*.ts"]
}
